<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notice"
    android:layout_width="match_parent"
    android:layout_height="85dp"
>
    <ImageView
        android:id="@+id/notify_iv_bookImage"
        android:src="@drawable/ic_launcher"
        android:padding="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/progressBar"
        android:layout_marginBottom="7dp"
    />
    <TextView
        android:id="@+id/notify_tv_bookName"
        android:maxLines="1"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="start|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_toEndOf="@+id/notify_iv_bookImage"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
    />
    <TextView
        android:id="@+id/notify_tv_divider"
        android:text=" - "
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_toEndOf="@+id/notify_tv_bookName"
        android:layout_alignParentTop="true"
    />
    <TextView
        android:id="@+id/notify_tv_chapterTitle"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_toEndOf="@+id/notify_tv_divider"
        android:layout_alignParentTop="true"
    />

    <ImageButton
        android:id="@+id/notify_btn_previous"
        android:src="@drawable/ic_previous"
        android:tint="@color/black"
        android:gravity="center"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:layout_toEndOf="@+id/notify_iv_bookImage"
        android:layout_above="@+id/progressBar"
        android:layout_marginBottom="8dp"
    />
    <ImageButton
        android:id="@+id/notify_btn_play"
        android:src="@drawable/ic_play"
        android:tint="@color/black"
        android:gravity="center"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:layout_toEndOf="@+id/notify_btn_previous"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/progressBar"
        android:layout_marginBottom="8dp"
    />
    <ImageButton
        android:id="@+id/notify_btn_next"
        android:src="@drawable/ic_next"
        android:tint="@color/black"
        android:gravity="center"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:layout_toEndOf="@+id/notify_btn_play"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/progressBar"
        android:layout_marginBottom="8dp"
    />
